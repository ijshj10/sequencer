#include "io_map.h"
#include "io_rw.h"


#define UART_BASE get_slot_addr(BRIDGE_BASE, S1_UART)

int uart_rx_empty()
{
	return io_read(UART_BASE, 0) & (1<<8);
}

char uart_read()
{
	io_read(UART_BASE, 0) & (1<<8);
	io_write(UART_BASE, 1, 0);
}

int uart_write(char c)
{
	io_write(UART_BASE, 2, c);
}



int main(){
	while(1){
		while(uart_rx_empty());

	}
}
