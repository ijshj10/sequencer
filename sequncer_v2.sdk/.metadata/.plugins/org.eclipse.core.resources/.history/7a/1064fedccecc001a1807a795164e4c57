#include <stdint.h>
#include "uart.h"
#include "timer.h"
#include "rto.h"

#define BUFFER_SIZE 256



void get_cmd(){
	uint32_t len;
	rto_time_t rto_time;
	uint32_t cmd;

	len = read_uint32();
	for(uint32_t i=0; i<len; ++i){
		rto_time.lower = read_uint32();
		rto_time.upper = read_uint32();
		cmd = read_uint32();
		send_rto_cmd(rto_time, cmd);
	}
}

int main(){
	timer_init();
	while(1){
		pause();
		clear();
		get_cmd();
		sleep_sec(1);
	}
}
