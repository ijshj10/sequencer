#include <stdint.h>
#include "uart.h"
#include "timer.h"

#define BUFFER_SIZE 256

uint8_t buffer[8];

#define to_uint32_t(buffer) (*(uint32_t *) (buffer))
#define to_uint64_t(buffer) (*(uint64_t *) (buffer))

void get_cmd(){
	uint8_t c;
	uint32_t len = 0;
	uint64_t time = 0;
	uint32_t cmd = 0;
	for(int i=0; i<4; i++){
		buffer[i] = read_blocking();
	}
}

int main(){
	timer_init();
	while(1){
		pause();
		clear();
		get_cmd();
		sleep_sec(1);
	}
}
